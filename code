#include <stdio.h>

int main() {
    int score = 0;
    char answer;

    printf("===== MINI QUIZ GAME =====\n\n");

    /* Question 1 */
    printf("1. What is the capital of India?\n");
    printf("a) Mumbai\nb) Delhi\nc) Chennai\nd) Kolkata\n");
    printf("Your answer: ");
    scanf(" %c", &answer);

    if (answer == 'b' || answer == 'B') {
        score++;
    }

    /* Question 2 */
    printf("\n2. Which language is used for system programming?\n");
    printf("a) Java\nb) Python\nc) C\nd) HTML\n");
    printf("Your answer: ");
    scanf(" %c", &answer);

    if (answer == 'c' || answer == 'C') {
        score++;
    }

    /* Question 3 */
    printf("\n3. Who is known as the father of C language?\n");
    printf("a) Dennis Ritchie\nb) Bjarne Stroustrup\nc) James Gosling\nd) Guido van Rossum\n");
    printf("Your answer: ");
    scanf(" %c", &answer);

    if (answer == 'a' || answer == 'A') {
        score++;
    }

    /* Question 4 */
    printf("\n4. Which symbol is used to end a statement in C?\n");
    printf("a) .\nb) ,\nc) :\nd) ;\n");
    printf("Your answer: ");
    scanf(" %c", &answer);

    if (answer == 'd' || answer == 'D') {
        score++;
    }

    /* Question 5 */
    printf("\n5. Which header file is required for printf()?\n");
    printf("a) math.h\nb) stdio.h\nc) conio.h\nd) string.h\n");
    printf("Your answer: ");
    scanf(" %c", &answer);

    if (answer == 'b' || answer == 'B') {
        score++;
    }

    printf("\n===== QUIZ COMPLETED =====\n");
    printf("Your Score: %d / 5\n", score);

    if (score >= 4)
        printf("Excellent! ğŸ‰\n");
    else if (score >= 2)
        printf("Good Try! ğŸ‘\n");
    else
        printf("Better Luck Next Time ğŸ˜Š\n");

    return 0;
}
